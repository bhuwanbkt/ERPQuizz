    ];

    // App state
    const state = {
      currentCategory: '',
      currentIndex: 0,
      filteredCards: [],
      isAnswerRevealed: false
    };

    // DOM Elements
    const elements = {
      categoryContainer: document.getElementById('category-container'),
      flashcardView: document.getElementById('flashcard-view'),
      flashcardContainer: document.getElementById('flashcard-container'),
      navButtons: document.getElementById('nav-buttons'),
      progressContainer: document.getElementById('progress-container'),
      progressBar: document.getElementById('progress-bar'),
      cardCounter: document.getElementById('card-counter'),
      prevBtn: document.getElementById('prev-btn'),
      nextBtn: document.getElementById('next-btn'),
      backBtn: document.getElementById('back-btn'),
      shuffleBtn: document.getElementById('shuffle-btn'),
      searchContainer: document.getElementById('search-container'),
      searchInput: document.getElementById('search-input'),
      searchButton: document.getElementById('search-button')
    };

    // Initialize the app
    function init() {
      showCategories();
      setupEventListeners();
    }

    // Group categories by their root name (e.g., "AWS IAM", "AWS S3" → "AWS")
    function getGroupedCategories() {
      const categoryMap = {};
      
      flashcards.forEach(card => {
        // Split category by space and take the first word as group
        const group = card.category.split(' ')[0];
        if (!categoryMap[group]) {
          categoryMap[group] = new Set();
        }
        categoryMap[group].add(card.category);
      });
      
      return categoryMap;
    }

    // Show all categories grouped by their root name
    function showCategories() {
      state.currentCategory = '';
      state.isAnswerRevealed = false;
      elements.categoryContainer.style.display = 'grid';
      elements.flashcardView.style.display = 'none';
      elements.searchContainer.style.display = 'none';
      elements.categoryContainer.innerHTML = '';

      const categoryGroups = getGroupedCategories();
      
      if (Object.keys(categoryGroups).length === 0) {
        showEmptyState('No categories available', 'Add some flashcards to get started');
        return;
      }

      for (const [group, subCategories] of Object.entries(categoryGroups)) {
        const cardCount = flashcards.filter(c => c.category.startsWith(group)).length;
        
        const card = document.createElement('div');
        card.className = 'category-card';
        card.innerHTML = `
          <h3 style="margin-top: 10px;">${group}</h3>
          <div style="margin-top: 15px; color: var(--gray); font-size: 0.9rem;">
            ${Array.from(subCategories).join(', ')}
          </div>
          <div style="margin-top: 15px; color: var(--gray);">
            ${cardCount} ${cardCount === 1 ? 'card' : 'cards'}
          </div>
          <div style="margin-top: 10px; font-size: 0.9rem; color: var(--gray);">
            Click to view flashcards
          </div>
        `;
        
        card.addEventListener('click', () => {
          // Show all cards that start with this group name
          state.filteredCards = flashcards.filter(c => c.category.startsWith(group));
          showCardSlider(group);
        });
        
        elements.categoryContainer.appendChild(card);
      }
    }

    // Show cards for a specific category
    function showCardSlider(category) {
      state.currentCategory = category;
      state.currentIndex = 0;
      state.isAnswerRevealed = false;
      
      elements.categoryContainer.style.display = 'none';
      elements.flashcardView.style.display = 'block';
      elements.searchContainer.style.display = 'flex';
      
      updateProgressBar();
      displayCurrentCard();
    }

    // Display the current card
    function displayCurrentCard() {
      elements.flashcardContainer.innerHTML = '';
      
      if (state.filteredCards.length === 0) {
        showEmptyState('No flashcards available', 'Add some flashcards to this category');
        return;
      }

      const card = state.filteredCards[state.currentIndex];
      const progress = ((state.currentIndex + 1) / state.filteredCards.length) * 100;

      elements.progressBar.style.width = `${progress}%`;
      elements.cardCounter.textContent = `Card ${state.currentIndex + 1} of ${state.filteredCards.length}`;

      const flashcard = document.createElement('div');
      flashcard.className = 'flashcard';
      flashcard.innerHTML = `
        <span class="category">${card.category.toUpperCase()}</span>
        <span class="difficulty ${card.difficulty}">${card.difficulty.toUpperCase()}</span>
        
        <div class="content-wrapper"> <!-- Added wrapper div -->
          <div class="question">
            <i class="fas fa-question-circle"></i> ${card.question}
          </div>
          
          <div class="tap-to-reveal">
            <i class="fas fa-hand-pointer"></i> Click to reveal answer
          </div>
          
          <div class="answer-content">
            <div class="answer">
              <i class="fas fa-lightbulb"></i> ${card.answer}
            </div>
            <div class="explanation">
              <i class="fas fa-info-circle"></i> ${card.explanation}
            </div>
          </div>
        </div>
      `;

      // Add the flashcard to the DOM first
      elements.flashcardContainer.appendChild(flashcard);

      // Now add the click event listener
      flashcard.addEventListener('click', function() {
        const answerContent = this.querySelector('.answer-content');
        const tapToReveal = this.querySelector('.tap-to-reveal');
        
        if (answerContent.style.display === 'block') {
          answerContent.style.display = 'none';
          tapToReveal.style.display = 'block';
        } else {
          answerContent.style.display = 'block';
          tapToReveal.style.display = 'none';
        }
      });
    }

    // Update progress bar
    function updateProgressBar() {
      const progress = ((state.currentIndex + 1) / state.filteredCards.length) * 100;
      elements.progressBar.style.width = `${progress}%`;
    }

    // Show empty state message
    function showEmptyState(title, message) {
      elements.flashcardContainer.innerHTML = `
        <div class="empty-state">
          <i class="fas fa-inbox"></i>
          <h3>${title}</h3>
          <p>${message}</p>
        </div>
      `;
    }

    // Navigation functions
    function goToPrevCard() {
      state.currentIndex = (state.currentIndex - 1 + state.filteredCards.length) % state.filteredCards.length;
      state.isAnswerRevealed = false;
      displayCurrentCard();
    }

    function goToNextCard() {
      state.currentIndex = (state.currentIndex + 1) % state.filteredCards.length;
      state.isAnswerRevealed = false;
      displayCurrentCard();
    }

    function shuffleCards() {
      state.filteredCards = shuffleArray(state.filteredCards);
      state.currentIndex = 0;
      state.isAnswerRevealed = false;
      displayCurrentCard();
    }

    function searchFlashcards() {
      const searchTerm = elements.searchInput.value.toLowerCase();
      if (!searchTerm) return;
      
      state.filteredCards = flashcards.filter(card => 
        card.question.toLowerCase().includes(searchTerm) || 
        card.answer.toLowerCase().includes(searchTerm) ||
        card.category.toLowerCase().includes(searchTerm)
      );
      
      if (state.filteredCards.length > 0) {
        state.currentCategory = 'Search Results';
        state.currentIndex = 0;
        state.isAnswerRevealed = false;
        elements.categoryContainer.style.display = 'none';
        elements.flashcardView.style.display = 'block';
        elements.searchContainer.style.display = 'flex';
        updateProgressBar();
        displayCurrentCard();
      } else {
        showEmptyState('No results found', 'Try a different search term');
      }
    }

    // Utility functions
    function shuffleArray(array) {
      const newArray = [...array];
      for (let i = newArray.length - 1; i > 0; i--) {
        const j = Math.floor(Math.random() * (i + 1));
        [newArray[i], newArray[j]] = [newArray[j], newArray[i]];
      }
      return newArray;
    }

    // Event listeners setup
    function setupEventListeners() {
      elements.prevBtn.addEventListener('click', goToPrevCard);
      elements.nextBtn.addEventListener('click', goToNextCard);
      elements.backBtn.addEventListener('click', showCategories);
      elements.shuffleBtn.addEventListener('click', shuffleCards);
      elements.searchButton.addEventListener('click', searchFlashcards);
      
      // Keyboard navigation
      document.addEventListener('keydown', (e) => {
        if (elements.flashcardView.style.display === 'block') {
          if (e.key === 'ArrowLeft') goToPrevCard();
          if (e.key === 'ArrowRight') goToNextCard();
          if (e.key === ' ') {
            e.preventDefault();
            const flashcard = document.querySelector('.flashcard');
            if (flashcard) {
              const answerContent = flashcard.querySelector('.answer-content');
              const tapToReveal = flashcard.querySelector('.tap-to-reveal');
              
              if (answerContent.style.display === 'block') {
                answerContent.style.display = 'none';
                tapToReveal.style.display = 'block';
              } else {
                answerContent.style.display = 'block';
                tapToReveal.style.display = 'none';
              }
            }
          }
        }
      });
    }

    // Initialize the app
    init();
  </script>
</body>
</html>
